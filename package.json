{
  "name": "folder-constellation",
  "version": "0.1.0",
  "private": true,
  "description": "Folder Constellation: visualize folder sizes as constellations (Electron + React + D3)",
  "main": "dist/main/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "run-p dev:main dev:renderer dev:electron",
    "dev:main": "tsup --watch",
    "dev:renderer": "vite --config vite.config.ts",
    "dev:electron": "wait-on tcp:5176 dist/main/main.js && electron .",
    "build": "npm run clean && tsup && vite build",
    "start": "electron .",
    "package": "electron-builder"
  },
  "dependencies": {
    "d3": "^7.9.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.53",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^29.4.0",
    "electron-builder": "^24.13.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.6.3",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.example.folderconstellation",
    "productName": "Folder Constellation",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis"
    }
  }
}
